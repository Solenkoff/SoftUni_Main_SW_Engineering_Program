{{setTitle 'Details Page'}}


<section id="details-info">
    <h1>Details</h1>
    <div class="image">
        <img src="{{disaster.image}}">
    </div>

    <div class="info">
        <div class="text">
            <h1 id="name">{{disaster.name}}</h1>
            <h3 id="location">Location: {{disaster.location}}</h3>
            <p id="type">Type: {{disaster.typeDisaster}}</p>
            <p id="year"><span>Year of the Event: {{disaster.eventYear}}</span></p>
            <p id="interested">Interested: {{interestCount}}</p>
            <p id="description">{{disaster.description}}</p>
        </div>

        {{#if user}}
        <div class="product-btn">
            {{#if isOwner}}
            <div class="author">
                <a href="/disasters/{{disaster.id}}/edit" class="btn-edit">Edit</a>
                <a href="/disasters/{{disaster.id}}/delete" class="btn-delete">Delete</a>
            </div>
            {{else}}
                {{#if isInterested}}
                    <p class="interested-message">You've already been interested in this event!</p>
                {{else}}
                    <a href="/disasters/{{disaster.id}}/interest" class="btn-interested">Interested</a>
                {{/if}}
            {{/if}}
        </div>
        {{/if}}

    </div>
</section>